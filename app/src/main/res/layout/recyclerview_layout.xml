<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        app:layout_constraintCircleRadius="5dp"
        android:background="@color/azure">
    <ImageView

            android:layout_width="150dp"
            android:layout_height="150dp"
            tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/imageView"/>
    <TextView
            android:layout_marginTop="2dp"
            android:id="@+id/tv_book_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="An Indian Girl"
            android:layout_toRightOf="@+id/imageView"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:textSize="16dp"
    />

    <TextView
            android:layout_marginTop="2dp"
            android:id="@+id/author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageView"
            android:layout_below="@id/tv_book_name"
            android:textStyle="bold"
            android:text="@string/author"
            android:textColor="@color/colorPrimary"

    />

    <TextView
            android:layout_marginTop="2dp"
            android:id="@+id/tv_author_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/author"
            android:layout_below="@id/tv_book_name"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:text="Chetan Bhagat"
            android:textColor="@color/colorPrimary"

    />

    <TextView
            android:layout_marginTop="2dp"
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageView"
            android:layout_below="@id/author"
            android:textStyle="bold"
            android:text="@string/published_on"
            android:textColor="@color/colorPrimaryDark"

    />

    <TextView
            android:layout_marginTop="2dp"
            android:id="@+id/tv_published_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/date"
            android:layout_below="@id/author"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:text="Chetan Bhagat"
            android:textColor="@color/colorPrimaryDark"

    />

    <TextView
            android:layout_marginTop="2dp"
            android:id="@+id/tv_abstract"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:layout_toRightOf="@+id/imageView"
            android:layout_below="@id/tv_published_date"
            android:textStyle="bold"
            android:textColor="@color/gray"

    />

    <TextView
            android:layout_marginTop="2dp"
            android:id="@+id/tv_more_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageView"
            android:layout_below="@id/tv_abstract"
            android:textStyle="bold"
            android:text="@string/more_details"
            android:textColor="@color/red"

    />

    <TextView
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:background="@color/light_gray"
    />

</RelativeLayout>